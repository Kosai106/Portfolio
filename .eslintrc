{
  "extends": "airbnb",
  "plugins": [
    "react",
  ],
  "settings": {
    "react": {
      "pragma": "React",
      "version": "15.0",
    },
  },
  "env" : {
    "browser" : true,
    "node" : true,
    "es6" : true,
    "commonjs": true,
    "amd" : true,
  },
  "globals": {
    "React": true,
  },
  "rules" : {
    "arrow-body-style": [0],
    "no-unused-vars" : [1],
    "no-undef" : [2],
    "max-len": [0],
    "indent": ["error", "tab"],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "react/jsx-indent-props": [2, "tab"],
    "react/jsx-indent": [2, "tab"],
    "react/no-multi-comp": [0],
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "modules": true,
      "spread" : true,
      "restParams" : true,
      "jsx" : true,
    }
  }
}
