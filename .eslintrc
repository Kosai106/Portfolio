{
  "extends": "airbnb",
  "plugins": [
    "react",
  ],
  "settings": {
    "react": {
      "pragma": "React",
      "version": "15.0",
    },
  },
  "env" : {
    "browser" : true,
    "node" : true,
    "es6" : true,
    "commonjs": true,
    "amd" : true,
  },
  "globals": {
    "React": true,
  },
  "rules" : {
    "no-unused-vars" : 2,
    "no-undef" : 2,
    "max-len": [0],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "spread" : true,
      "restParams" : true,
      "jsx" : true,
    }
  }
}
